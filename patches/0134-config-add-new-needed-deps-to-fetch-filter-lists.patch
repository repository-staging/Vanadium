for adblocking.
---
 DEPS | 12 ++++++++++++
 1 file changed, 12 insertions(+)

diff --git a/DEPS b/DEPS
index 93270ac54b156..954da16441baf 100644
--- a/DEPS
+++ b/DEPS
@@ -4812,6 +4812,18 @@ hooks = [
                '--input-public',
                'src/chromeos/tast_control_disabled_tests_public_builders.txt'],
   },
+  {
+    'name': 'fetch_filter_lists',
+    'condition': 'checkout_android',
+    'action': ['python3',
+              'src/vanadium/android_config/filter_lists/filter_list_download.py',
+              '--output',
+              'src/vanadium/android_config/filter_lists/filter_lists_easylist.txt',
+              '--urls',
+              'https://easylist-downloads.adblockplus.org/antiadblockfilters.txt',
+              'https://easylist.to/easylist/easylist.txt',
+              'https://easylist.to/easylist/easyprivacy.txt']
+  },
 
 ]
 
